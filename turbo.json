{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "lint:fix": {
      "dependsOn": [
        "^lint:fix"
      ]
    },
    "format": {
      "dependsOn": [
        "^format"
      ]
    },
    "format:fix": {
      "dependsOn": [
        "^format:fix"
      ]
    },
    "tscheck": {
      "dependsOn": [
        "^tscheck"
      ]
    },
    "test": {
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "interactive": true,
      "persistent": true
    },
    "test:coverage": {
      "cache": false
    }
  }
}