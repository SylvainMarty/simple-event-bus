{
  "name": "@sylvmty/simple-event-bus",
  "type": "module",
  "version": "1.0.0",
  "description": "A simple, no-dependency, synchronous event bus written in TypeScript",
  "author": "Sylvain Marty",
  "license": "MIT",
  "homepage": "https://github.com/SylvainMarty/simple-event-bus#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SylvainMarty/simple-event-bus.git"
  },
  "bugs": {
    "url": "https://github.com/SylvainMarty/simple-event-bus/issues"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "test": "vitest --run",
    "test:watch": "vitest",
