    "tscheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@vitest/coverage-v8": "^1.6.0",
    "typescript": "^5.6.2",
    "vite": "^5.3.2",
    "vite-plugin-dts": "^4.2.2",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.ts": "pnpm run lint"
  }
