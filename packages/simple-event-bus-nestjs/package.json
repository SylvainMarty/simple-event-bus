{
  "name": "@sylvmty/simple-event-bus-nestjs",
  "version": "1.0.0",
  "description": "NestJS package for a simple, no-dependency, synchronous event bus written in TypeScript",
  "author": "Sylvain Marty",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": " biome lint ./src ./libs",
    "lint:fix": " biome lint ./src ./libs --write",
    "format": "biome format ./src ./libs",
    "format:fix": "biome format ./src ./libs --write",
    "tscheck": "tsc --noEmit"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "peerDependencies": {
    "@sylvmty/simple-event-bus": "*"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "jest": "^29.5.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@lib/simple-event-bus(|/.*)$": "<rootDir>/libs/simple-event-bus/src/$1",
      "^@sylvmty/simple-event-bus$": "<rootDir>/../../node_modules/@sylvmty/simple-event-bus/dist/index.cjs"
    }
  }
}